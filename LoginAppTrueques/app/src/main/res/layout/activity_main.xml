<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_fullhd">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/iniciarSesion"
                android:layout_width="115dp"
                android:layout_height="100dp"
                android:layout_marginEnd="18dp"
                android:text="Iniciar sesion"
                android:textSize="15dp"
                android:textStyle="bold"
                app:cornerRadius="5dp"
                app:icon="@drawable/login_icon"
                app:iconGravity="textTop"
                app:rippleColor="@color/my_secundary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/registrarse"
                android:layout_width="115dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/my_secundary"
                android:text="Crear cuenta"
                android:textSize="15dp"
                android:textStyle="bold"
                app:cornerRadius="5dp"
                app:icon="@drawable/signup_icon"
                app:iconGravity="textTop"
                app:rippleColor="@color/my_primary" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>