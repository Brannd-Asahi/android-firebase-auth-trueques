<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/borrarMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BorrarPublicacion"
    android:padding="16dp">

    <!-- Campo para ingresar el slug de la publicación a eliminar -->
    <EditText
        android:id="@+id/etSlugDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Slug (3 dígitos) de publicación a eliminar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para eliminar -->
    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ELIMINAR"
        app:layout_constraintTop_toBottomOf="@id/etSlugDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
